<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Blyskitka</display-name>

    <servlet>
        <servlet-name>indexServlet</servlet-name>
        <servlet-class>com.blyskitka.Controller.IndexServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>indexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>searchServlet</servlet-name>
        <servlet-class>com.blyskitka.Controller.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getKindsServlet</servlet-name>
        <servlet-class>com.blyskitka.Controller.GetKindsByCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getKindsServlet</servlet-name>
        <url-pattern>/kinds</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getArticlesByKindServlet</servlet-name>
        <servlet-class>com.blyskitka.Controller.GetArticlesByKindServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getArticlesByKindServlet</servlet-name>
        <url-pattern>/articlesByKind</url-pattern>
    </servlet-mapping>
</web-app>